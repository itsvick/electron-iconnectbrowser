{
  "appId": "co.iconnect.desktop",
  "productName": "iConnect",
  "copyright": "iconnect",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "extraResources/",
    "!**/*.ts",
    "!.github",
    "!.vscode",
    "!.code-workspace",
    "!.npmrc",
    "!*.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!_config.yml",
    "!angular.json",
    "!tsconfig*.json",
    "!tslint.json",
    "!.eslintrc.json",
    "!karma.conf.js",
    "!angular.webpack.js",
    "!*.map",
    "!copyAssets.js"
  ],
  "win": {
    "target": "nsis",
    "icon": "src/assets/favicon.ico"
  },
  "nsis": {
    "installerIcon": "src/assets/favicon.ico",
    "uninstallerIcon": "src/assets/favicon.ico"
  },
  "portable": {
    "splashImage": "dist/assets/icons/electron.bmp"
  },
  "mac": {
    "icon": "dist/assets/favicon.icns",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist/assets/favicon.png",
    "target": ["AppImage", "deb"]
  }
}
